<%= simple_form_for [@bucket, @activity] do |f| %>
  <%= f.input :title, input_html: { maxlength: 35 } %>
  <%= f.input :budget %>
  <%= f.input :location %>
  <%= f.input :time_frame %>
  <%= f.input :people_number %>
  <%= f.input :category, collection: Activity::CATEGORY %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
