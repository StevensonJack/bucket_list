<div class="container">
  <div>
    <h1>
      <%= @bucket.title %>
    </h1>
    <button id="show-from-activity-page"><i class="fas fa-edit"></i></button>
    <div id="from-activity-page">
      <%# --- Bucket form --- %>
      <%= simple_form_for @bucket, html: { class: 'form-inline' } do |f| %>
        <%= f.text_field :title %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  
  <%= link_to bucket_path(@bucket),  method: :delete, data: { confirm: "Are you sure" } do %>
    <i class="fas fa-trash-alt"></i> Delete bucket
  <% end %>
  <div>
    <%= link_to new_bucket_activity_path do %>
      <button class="btn btn-primary">New activity</button>
    <% end %>
    <%= link_to buckets_path do %>
      <button><i class="fas fa-undo-alt"></i> Back</button>
    <% end %>
  </div>

  <%@activities.each do |activity| %>
    <%= link_to bucket_activity_path(@bucket, activity) do %>
      <div class="activity-card">
        <%= activity.title %>
      </div>
    <% end %>
  <% end %>
</div>