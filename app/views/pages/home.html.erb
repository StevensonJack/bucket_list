        <div class="card-activity-infos">
          <h2>Swim with dolphins</h2>
        </div>
        <p class="activity-offer-price red">39%</p>
      </div>
    </div>
    <div class="activity-perimetre col-sm-12 col-md-12 col-lg-10 center-home-page-content">
      <div class="card-activity">
        <div class="activity-image" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(<%= asset_path "paris.jpg" %>);"></div>
