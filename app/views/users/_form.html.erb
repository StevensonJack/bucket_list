<%= simple_form_for @user do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :birthday %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "btn btn-primary" %>
  <%= link_to user_path, class: "btn btn-primary" do %>
    <i class="fas fa-undo"></i> Back
  <% end %>
<% end %>
